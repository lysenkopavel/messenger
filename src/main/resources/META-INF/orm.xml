<?xml version="1.0" encoding="UTF-8"?>

<entity-mappings
        xmlns="http://java.sun.com/xml/ns/persistence/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
						    http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
        version="2.0">

    <persistence-unit-metadata>
    <xml-mapping-metadata-complete/>
    <persistence-unit-defaults>
    <schema>messenger</schema>
    <!--<catalog>mycatalog</catalog>-->
    <cascade-persist/>
    </persistence-unit-defaults>
    </persistence-unit-metadata>

    <!--<sql-result-set-mapping name="ShowAllMappingXml">-->
        <!--<entity-result entity-class="entities.User">-->
            <!--<field-result name="userID" column="USER_ID"/>-->
            <!--<field-result name="nickname" column="NICKNAME"/>-->
        <!--</entity-result>-->
    <!--</sql-result-set-mapping>-->

    <entity class="entities.User">
        <table name="USERS"/>
        <attributes>
            <id name="userID">
                <column name="USER_ID"/>
                <generated-value strategy="SEQUENCE"/>
            </id>
            <basic name="nickname">
                <column name="NICKNAME" length="100"/>
            </basic>
            <many-to-many name="userChats" fetch="EAGER">
                <join-table name="USERS_CHATS">
                    <join-column name="U_ID" referenced-column-name="USER_ID"/>
                    <inverse-join-column name="C_ID" referenced-column-name="CHAT_ID"/>
                </join-table>
                <cascade>
                    <cascade-all/>
                </cascade>
            </many-to-many>
        </attributes>
    </entity>


    <entity class="entities.Chat">
        <table name="CHATS"/>
        <attributes>
            <id name="chatID">
                <column name="CHAT_ID"/>
                <generated-value strategy="SEQUENCE"/>
            </id>
            <basic name="chatTitle">
                <column name="TITLECHAT" length="100"/>
            </basic>
            <many-to-many name="usersInChat" mapped-by="userChats" fetch="EAGER">
                <cascade>
                    <cascade-all/>
                </cascade>
            </many-to-many>
        </attributes>
    </entity>

    <entity class="entities.Message">
        <table name="MESSAGES"/>
        <!--<id-class class="entities.MessagePrimaryKey"/>-->
        <attributes>
            <embedded-id name="messID"/>
            <basic name="message">
                <column name="MESSAGE" length="1000"/>
            </basic>
            <basic name="messageTime">
                <column name="TIME"/>
                <temporal>TIMESTAMP</temporal>
            </basic>
        </attributes>
    </entity>

    <embeddable class="entities.MessagePrimaryKey">
        <attributes>
            <basic name="messageID"/>
            <basic name="chatID"/>
            <basic name="userID"/>
        </attributes>
    </embeddable>


</entity-mappings>
